// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String             @unique @default(uuid())
  firstname           String?            @db.VarChar(100)
  lastname            String?            @db.VarChar(100)
  username            String             @unique
  email               String             @unique
  avatar              String?            @db.VarChar(255)
  staff_infar_tickets StaffInfraTicket[]
  created_at          DateTime           @default(now())
  updated_at          DateTime           @updatedAt

  SenderMessages   ChatMessages[] @relation("sender_relation")
  ReceiverMessages ChatMessages[] @relation("receiver_relation")
}

model StaffInfraTicket {
  id          String                 @unique @default(uuid())
  title       String                 @db.VarChar(255)
  description String
  image       String?                @db.VarChar(255)
  User        User                   @relation(fields: [user_id], references: [id])
  user_id     String
  status      StaffInfraTicketStatus @default(NEW)
  created_at  DateTime               @default(now())
  updated_at  DateTime               @updatedAt
}

enum StaffInfraTicketStatus {
  NEW
  FIXED
  ON_IT
  WONT_FIX
  DUBLICATE
  IRRELEEVANT
}

model ChatMessages {
  id String @unique @default(uuid())

  Sender    User   @relation("sender_relation", fields: [sender_id], references: [id])
  sender_id String

  Receiver    User?   @relation("receiver_relation", fields: [receiver_id], references: [id])
  receiver_id String?

  ticket_id String?

  message String @default("")

  type       ChatMessagesType @default(DM)
  created_at DateTime         @default(now())
  updated_at DateTime         @updatedAt
}

enum ChatMessagesType {
  DM
  INFRA_TICKET
}
